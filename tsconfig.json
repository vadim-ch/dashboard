{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./tmpBuild/",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
   },
  "paths": {
    "@components/*": ["/view/components"]
  },
  "exclude": [
    "node_modules",
    "**/*-test.ts",
    "**/*-test.tsx"
  ]
}
